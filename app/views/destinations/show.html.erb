<h1> <%= @destination[:name] %>  </h1>	
<p>
<%= image_tag(@destination.photo) %> <br>
<%= @destination[:country] %> <br>
<%= @destination[:continent] %> <br>
<%= @destination[:rating] %> <br>
<%= @destination[:cost] %> <br>
<%= @destination[:category] %> <br>
<%= @destination[:description] %> <br>
</p>

<% number_of_likes=0%>
<% for i in 1..User.count %>
	<% if User.find(i).likes?(@destination) %>
		<% number_of_likes +=1 %>
	<% end %>
<% end %>
<p>Likes for this destination: </p> 
<%= number_of_likes %>

<% if current_user.likes?(@destination)%>
	<%= link_to "UnLike this destination", unlike_destination_url %>
<% else %>	
	<%= link_to "Like this destination", like_destination_url %>
<% end %>	

  <h3>Reviews</h3>

  <p>Reviews for <%= @destination.name %></p>

  <% @destination.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
      <% if review.user != nil %>
        <em> by <%= review.user.email %></em>
        Added on: <%= review.created_at %>
      <% end %>
    </p>
  <% end %>

  <h4>New Review</h4>

  <%= form_for([@destination, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>


<%= link_to "Back to destinations", destinations_url %>